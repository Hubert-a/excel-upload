<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        #data {
          font-family: Arial, Helvetica, sans-serif;
          border-collapse: collapse;
          width: 100%;
        }
        
        #data td, #data th {
          border: 1px solid #ddd;
          padding: 8px;
        }
        
        #data tr:nth-child(even){background-color: #f2f2f2;}
        
        #data tr:hover {background-color: #ddd;}
        
        #data th {
          padding-top: 12px;
          padding-bottom: 12px;
          text-align: left;
          background-color: #04AA6D;
          color: white;
        }
        .text-center{
            text-align: center;
        }
        </style>
</head>
<body>
    <% if (data.length > 0) { %>

        <table id="data">
            <thead>
                <tr class="home">
                    <th>ID</th>
                    <th>Index Number</th>
                    <th>Full Name</th>
                   
                </tr>
            </thead>
            <tbody>
                <% data.forEach(function(data) { %>
                <tr>
                    <td><%= data.id %></td>
                    <td><%= data.index_numbers %></td>
                    <td><%= data.full_name %></td>
                   
                </tr>
                <% }); %>
            </tbody>
        </table>
        <% } else { %>
        <h3 class="text-center">There are no students</h3>
        <% } %>
</body>
</html>